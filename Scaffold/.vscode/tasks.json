{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PreLaunch",
      "dependsOn": ["Start Infrastructure", "Build"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "PostDebug",
      "dependsOn": ["Stop Infrastructure"],
      "problemMatcher": []
    },
    {
      "label": "Clean",
      "command": "dotnet",
      "type": "process",
      "args": ["clean"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Restore",
      "command": "dotnet",
      "type": "process",
      "args": ["restore"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build",
      "command": "dotnet",
      "type": "process",
      "args": ["build"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Test",
      "command": "dotnet",
      "type": "process",
      "args": ["test"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Start Infrastructure",
      "command": "docker-compose",
      "windows": {
        "command": "docker-compose.exe"
      },
      "type": "process",
      "args": [
        "up",
        "--detach",
        "postgres",
        "grafana",
        "jaeger",
        "opentelemetry-collector",
        "prometheus"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Stop Infrastructure",
      "command": "docker-compose",
      "windows": {
        "command": "docker-compose.exe"
      },
      "type": "process",
      "args": ["down"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
